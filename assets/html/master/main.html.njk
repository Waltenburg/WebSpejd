{% extends "./base.html.njk" %}
{% import "./utils.html.njk" as utils %}

{% block body %}
    <h2>Poster</h2>
    <div hx-get="/master/posts" hx-trigger="every 5s">
        {{ utils.posts(posts) }}
    </div>
    <h2>Patruljer</h2>
    {{ utils.patrols(patrols) }}
    <h2>Graf</h2>
    <div hx-get="/master/graph", hx-trigger="every 5s">
        {{ utils.graph(graph) }}
    </div>
    <h2>Checkins</h2>
    <div hx-get="/master/checkins" hx-trigger="every 5s">
        {{ utils.checkins(checkins) }}
    </div>
{% endblock %}
