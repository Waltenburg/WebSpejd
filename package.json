{
    "name": "webspejd",
    "version": "2024-12-10",
    "devDependencies": {
        "@types/chai": "^5.0.1",
        "@types/mocha": "^10.0.10",
        "@types/node": "^18.15.10",
        "@types/nunjucks": "^3.2.6",
        "chai": "^5.1.2",
        "mocha": "^11.0.1",
        "ts-node": "^10.9.1",
        "typescript": "latest"
    },
    "dependencies": {
        "commander": "^12.1.0",
        "nunjucks": "^3.2.4",
        "rimraf": "^6.0.1"
    },
    "scripts": {
        "start": "node target/server.js --assets assets",
        "start:ts": "ts-node src/server.ts",
        "build": "npx tsc --project tsconfig.deployed.json && cp -r assets target",
        "build:test": "npm run clean:test && npx tsc --project tsconfig.test.json && cp -r assets test",
        "clean": "rimraf --glob target",
        "clean:test": "rimraf --glob test",
        "cleanAll": "npm run clean && npm run clean:test",
        "test": "mocha",
        "test:watch": "mocha --watch",
        "testAfterBuild": "npm run build:test && npm run test"
    },
    "files": [
        "target/"
    ],
    "main": "target/server.js",
    "bin": {
        "webspejd": "target/server.js"
    }
}
